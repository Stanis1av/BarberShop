<div class="col-sm-5">

    <h2 class="text-center">Свяжитесь с нами</h2>

		<%= form_for model: [:admin, @contact], local: true, url: admin_contacts_path(@contact), method: :put do |f| %>
			 <div class="form-group">
				<%= f.label :email %><br/>
				<%= f.text_field :email, class: "form-control" %>
			</div>
			 <div class="form-group">
				<%= f.label :message %><br/>
				<%= f.text_area :message, class: "form-control" %>
			</div>

			 <div class="form-group">
				<%= f.submit 'Отправить', class: "btn btn-primary" %>
			</div>
		<% end %>

</div>