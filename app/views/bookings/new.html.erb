<div class="row">
  	<div class="col-lg-4 col-md-6 ml-auto mr-auto">

    <h2 class="text-center">Онлайн запись</h2>

		<%= form_for :booking, url: booking_path do |f| %>

		<div class="form-group">
			<%= f.label :first_name %><br/>
			<%= f.text_field :first_name, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :last_name %><br/>
			<%= f.text_field :last_name, class: "form-control" %>
		</div>

		<div class="form-group row">
		  <label for="example-datetime-local-input" class="col-2 col-form-label">Date and time</label>
		  <div class="col-10">
		    <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="example-datetime-local-input">
		  </div>
		</div>

		<div class="form-group">
			<%= f.label :dateandtime %><br/>
			<%= f.text_field :dateandtime, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :phone_num %><br/>
			<%= f.text_field :phone_num, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :note %><br/>
			<%= f.text_area :note, class: "form-control", rows: 5 %>
		</div>

		<div class="actions">
			<%= f.submit "Записаться", class: "btn btn-primary" %>
		</div>
			<% end %>

	</div>
</div>