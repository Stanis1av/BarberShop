<div class="container">
  <div class="row m-y-2">	
    <div class="col-lg-8 push-lg-4">
      <h2 class="text-center">Онлайн запись</h2>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Profile</a>
          </li>
          <li class="nav-item">
            <a href="" data-target="#messages" data-toggle="tab" class="nav-link">Messages</a>
          </li>
          <li class="nav-item">
            <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Edit</a>
          </li>
        </ul>
      <div class="tab-content p-b-3">
        <div class="tab-pane active" id="profile">
          <h4 class="m-y-2">User Profile</h4>
            <div class="row">
              <div class="col-md-12">
		        <%= form_for :booking, url: bookings_path do |f| %>

				<div class="form-group">
					<%= f.label "Введите имя" %><br/>
					<%= f.text_field :first_name, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label "Введите фамилию" %><br/>
					<%= f.text_field :last_name, class: "form-control" %>
				</div>

				<div class="form-group">
				  <%= f.label "Введите дату и время" %>
				    <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="example-datetime-local-input" name="dateandtime">
				</div>

				<div class="form-group">
					<%= f.label "Номер телефона" %><br/>
					<%= f.text_field :phone_num, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label "Введите заметку для нас" %><br/>
					<%= f.text_area :note, class: "form-control", rows: 5 %>
				</div>

				
					
              </div>
            </div>
                 <!--/row-->
          </div>
            <div class="tab-pane" id="messages">
              <h4 class="m-y-2">Recent Messages &amp; Notifications</h4>
                
          </div>
            <div class="tab-pane" id="edit">
               <h4 class="m-y-2">Edit Profile</h4>

                    <!-- <form role="form"> -->
                <%= f.fields_for :location do |location_f| %>
		      	<div class="form-group">
					<%= location_f.label "Имя города" %><br/>
					<%= location_f.text_field :city, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= location_f.label "Имя филиала" %><br/>
					<%= location_f.text_field :branch_name, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= location_f.label "Точное местоположение" %><br/>
					<%= location_f.text_field :location, class: "form-control" %>
				</div>
				<% end %>
                <div class="form-group">
					<%= f.submit "Записаться", class: "btn btn-primary" %>
				</div>

                <% end %>
            </div>
          </div>

                    <!-- </form> -->
                  
        </div>
      </div>
    </div>      

  </div>

</div>
</div>
<hr>
