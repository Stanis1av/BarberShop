<div class="col-sm-5">
    <h2 class="text-center">Change your password</h2>

    <%= form_with model: [:admin, @users], local: true, url: admin_user_path(@users), method: :put do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, autocomplete: "username", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :role_id %><br />
        <%= f.collection_select( :role_id, Role.all, :id, :name, { promt: true }, class: 'custom-select') %>
      </div>
    <br/>
      <div class="actions">
        <%= f.submit "Обновить", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
</div>