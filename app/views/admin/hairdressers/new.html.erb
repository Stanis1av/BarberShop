<div class="col-sm-5">

	<%= form_with model: [:admin, @hairdresser], local: true, url: admin_hairdressers_path(@hairdresser) do |f| %>

	<div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :position %><br />
        <%= f.text_field :position, autocomplete: "position", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br />
        <%= f.text_area :description, autocomplete: "description", class: "form-control", rows: 5 %>
      </div>

      <div class="actions">
        <br/><%= f.submit "Создать", class: "btn btn-primary" %>
      </div>
    <% end %>	
</div>