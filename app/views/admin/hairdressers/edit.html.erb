<div class="col-sm-5">
    <h3 class="text-center">Редактировать парикмахера</h3>

    <%= form_with model: [:admin, @hairdresser], local: true, url: admin_hairdresser_path(@hairdresser), method: :put do |f| %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :position %><br />
        <%= f.text_field :position, autocomplete: "position", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br />
        <%= f.text_area :description, autocomplete: "description", class: "form-control", rows: 5 %>
      </div>
    <br/>
      <div class="actions">
        <%= f.submit "Редактировать", class: "btn btn-primary" %>
      </div>
    <% end %>

</div>