<h3>Список записей</h3>
<hr/>
<%= link_to 'Admin', @admin %>
<div class="table-responsive">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th class="" scope="col">Id</th>
      <th class="" scope="col">Имя</th>
      <th class="" scope="col">Фамилия</th>
      <th class="" scope="col">Время</th>
      <th class="" scope="col">Город</th>
      <th class="" scope="col">Филиал</th>
      <th class="" scope="col">Адресс</th>
      <th class="shrink" scope="col"></th>
    </tr>
  </thead>
  <tbody>
  	<% @bookings_admin.each do |booking| %>
    <tr>
      <td><%= booking.id %></td>
      <td><%= booking.first_name %></td>
      <td><%= booking.last_name %></td>
      <td><%= booking.dateandtime %></td>
      <% Location.where(id: booking.location_id).each do |l| %>
        <td><%= l.city %></td>
        <td><%= l.branch_name %></td>
        <td><%= l.location %></td>
      <% end %>
      <td><div class="btn-group btn-group-sm align-content-start" role="group"><%= link_to(admin_bookings_path, title: "", class: "btn btn-outline-primary", data: { toggle: 'tooltip', placement: 'top', original_title: 'Показать всё' }) do %>
          <%= icon("list-ul", class: "bi bi-list-ul") %>
          <% end %>

          <%= link_to(new_admin_booking_path, title: "", class: "btn btn-outline-success", data: { toggle: 'tooltip', placement: 'top', original_title: 'Добавить' }) do %>
          <%= icon("plus", class: "bi bi-plus") %>
          <% end %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
