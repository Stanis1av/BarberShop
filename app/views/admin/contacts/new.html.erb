<div class="col-sm-5">

    <h2 class="text-center">Создать новое сообщение</h2>
    <hr/>
    <%= render 'admin/nav_links' %>
    
		<%= form_with model: [:admin, @contact], local: true do |f| %>
			 <div class="form-group">
				<%= f.label :email %><br/>
				<%= f.email_field :email, class: "form-control" %>
			</div>
			 <div class="form-group">
				<%= f.label :message %><br/>
				<%= f.text_area :message, class: "form-control" %>
			</div>

			 <div class="form-group">
				<%= f.submit 'Отправить', class: "btn btn-primary" %>
			</div>
		<% end %>

</div>